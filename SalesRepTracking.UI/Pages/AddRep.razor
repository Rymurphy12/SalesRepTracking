@page "/AddRep"

<EditForm Model="@PersonalInfo" OnSubmit="SubmitData">
    <div class="mb-3 row">
        <label for="@PersonalInfo.FirstName" class="col-sm-2 col-form-label">First Name: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.FirstName" class="form-control"></InputText>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.LastName" class="col-sm-2 col-form-label">Last Name: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.LastName" class="form-control"></InputText>       
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.AddressOne" class="col-sm-2 col-form-label">Address: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.AddressOne" class="form-control"></InputText>       
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.AddressTwo" class="col-sm-2 col-form-label">Address 2: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.AddressTwo" class="form-control"></InputText>       
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.City" class="col-sm-2 col-form-label">City: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.City" class="form-control"></InputText>         
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.State" class="col-sm-2 col-form-label">State: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.State" class="form-control"></InputText>        
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.Zip" class="col-sm-2 col-form-label">Zip: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.Zip" class="form-control"></InputText>         
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.Phone" class="col-sm-2 col-form-label">Phone: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.Phone" class="form-control"></InputText> 
        </div>
    </div>
    <div class="mb-3 row">
        <label for="@PersonalInfo.email" class="col-sm-2 col-form-label">Email: </label>
        <div class="col-sm-10">
            <InputText @bind-Value="PersonalInfo.email" class="form-control"></InputText>
        </div>
    </div>
    <div class="mb-3 row">
        <input type="submit" value="Submit" class="btn btn-primary"/>
    </div>
</EditForm>
